<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import main.java.controllers.AccountSingleController?>

<FlowPane xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="main.java.controllers.AccountSingleController"
	orientation="VERTICAL" fx:id="singleAccountContainer">
	<children>
			<VBox fx:id="accountAddBox">
			<HBox>
				<Label>Name: </Label>
				<TextField fx:id="nameField" value="${controller.account.name}" />
			</HBox>
			<HBox>
				<Label>Number</Label>
				<TextField fx:id="numberField" value="${controller.account.number}" />
			</HBox>
			<HBox>
				<Label>Type: </Label>
				<TextField fx:id="typeField" value="${controller.account.type}" />
			</HBox>
			<HBox>
				<Label>Balance: </Label>
				<TextField fx:id="typeField" value="${controller.account.balance}" />
			</HBox>
			<HBox>
				<Button fx:id="backToAccountListButton" mnemonicParsing="false"
					 text="Back" />
				<Button fx:id="saveAccountButton" mnemonicParsing="false"
					onMouseClicked="#saveAccount" text="Save Account" />
			</HBox>
		</VBox>


	</children>
</FlowPane>