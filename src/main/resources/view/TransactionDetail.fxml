<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Text?>
<?import main.java.controllers.TransactionListController?>
<?import javafx.scene.layout.Pane?>


<FlowPane xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="main.java.controllers.TransactionDetailController"
	orientation="VERTICAL">
	<children>
		<Text text="${controller.transaction.name}" />
		<FlowPane>
			<Text text="Amount: " />
			<Text text="${controller.transaction.amount}" />
		</FlowPane>

		<Button mnemonicParsing="false" onMouseClicked="#saveTransaction"
			text="Save Transaction" />
	</children>
</FlowPane>
